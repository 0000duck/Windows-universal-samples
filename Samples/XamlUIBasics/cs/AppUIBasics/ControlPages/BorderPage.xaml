<Page x:Class="AppUIBasics.ControlPages.BorderPage" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:local="using:AppUIBasics.ControlPages"
        xmlns:common="using:AppUIBasics.Common" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d">
    <StackPanel>
        <local:ControlExample x:Name="Example1" HeaderText="A Border around a TextBlock.">
            <Border x:Name="Control1" Grid.Row="1" BorderThickness="2" BorderBrush="#FFFFD700" Background="#FFFFFFFF"
                    Margin="0,0,0,10">
                <TextBlock Text="Text inside a border" FontSize="18" Foreground="Black" />
            </Border>
            <local:ControlExample.Xaml>
                <RichTextBlock>
                    <Paragraph>&lt;Border BorderThickness="<Run Text="{x:Bind Control1.BorderThickness.Top, Mode=OneWay}" />"
                                BorderBrush="<Run Text="{x:Bind Control1.BorderBrush.(SolidColorBrush.Color), Converter={StaticResource colorStringConverter}, Mode=OneWay}" />"
                                Background="<Run Text="{x:Bind Control1.Background.(SolidColorBrush.Color), Converter={StaticResource colorStringConverter}, Mode=OneWay}" />"&gt;
                    </Paragraph>
                    <Paragraph TextIndent="12">&lt;TextBlock Text="Text inside a border" FontSize="18" Foreground="Black"/&gt;</Paragraph>
                    <Paragraph>&lt;/Border&gt;</Paragraph>
                </RichTextBlock>
            </local:ControlExample.Xaml>
        </local:ControlExample>
        <local:ControlExample x:Name="ExampleAccessories"
                HeaderText="Use the slider and radio buttons to change the border.">
            <StackPanel>
                <Slider x:Name="ThicknessSlider" Header="BorderThickness" Minimum="0" Maximum="10" StepFrequency="1" IsFocusEngagementEnabled="False"
                        Value="2" Width="200" ValueChanged="ThicknessSlider_ValueChanged" HorizontalAlignment="Left" />
                <ScrollViewer VerticalScrollMode="Disabled" HorizontalScrollMode="Auto"
                        HorizontalScrollBarVisibility="Hidden">
                    <StackPanel>
                        <TextBlock Text="Background" Style="{ThemeResource CaptionTextBlockStyle}" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Green" Tag="Green" GroupName="BGColor" Checked="BGRadioButton_Checked" />
                            <RadioButton Content="Yellow" Tag="Yellow" GroupName="BGColor" Margin="8,0"
                                    Checked="BGRadioButton_Checked" />
                            <RadioButton Content="Blue" Tag="Blue" GroupName="BGColor" Checked="BGRadioButton_Checked" />
                            <RadioButton Content="White" Tag="White" GroupName="BGColor" Checked="BGRadioButton_Checked"
                                    Margin="8,0" IsChecked="True" />
                        </StackPanel>
                        <TextBlock Text="BorderBrush" Style="{ThemeResource CaptionTextBlockStyle}" />
                        <StackPanel Orientation="Horizontal">
                            <RadioButton Content="Green" Tag="Green" GroupName="BorderBrush"
                                    Checked="RadioButton_Checked" />
                            <RadioButton Content="Yellow" Tag="Yellow" GroupName="BorderBrush" Margin="8,0"
                                    Checked="RadioButton_Checked" IsChecked="True" />
                            <RadioButton Content="Blue" Tag="Blue" GroupName="BorderBrush" Checked="RadioButton_Checked" />
                            <RadioButton Content="White" Tag="White" GroupName="BorderBrush" Margin="8,0"
                                    Checked="RadioButton_Checked" />
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </local:ControlExample>

    </StackPanel>
</Page>